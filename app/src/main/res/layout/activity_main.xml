<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/loadimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"
        android:text="Choose your files here"
        />

    <TextView
        android:id="@+id/getFilesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loadimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Get your files at:"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/codeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000"
        android:layout_below="@id/getFilesTV"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/targetimage"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/codeTV"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/leftTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/targetimage"
        android:layout_centerHorizontal="true"
        android:text="+3 more"
        android:textSize="22sp"
        android:visibility="invisible" />
</RelativeLayout>